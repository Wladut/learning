<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField GridPane.rowIndex="0" GridPane.columnIndex="0" fx:id ="nameField" onKeyReleased="#handleKeyReleased"/>
    <Button text="Say Hello" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#onButtonClicked" fx:id="helloButton"/>
    <Button text="Say Bye" GridPane.rowIndex="1" GridPane.columnIndex="1"
            onAction="#onButtonClicked" fx:id="byeButton"/>
    <CheckBox text="Clear the field after saying hello or bye"
              GridPane.rowIndex="2" GridPane.columnIndex="0"
              GridPane.columnSpan="2" fx:id="ourCheckBox" onAction="#handleChange"/>
</GridPane>